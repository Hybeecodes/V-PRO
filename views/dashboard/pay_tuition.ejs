<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="images/apple-icon.png">
    <link rel="icon" href="images/favicon.png">
    <title>
        <%= title %>
    </title>
    <!--     Fonts and icons     -->
    <link href="stylesheets/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->

    <link href="stylesheets/lib/calendar2/semantic.ui.min.css" rel="stylesheet">
    <link href="stylesheets/lib/calendar2/pignose.calendar.min.css" rel="stylesheet">
    <link href="stylesheets/lib/owl.carousel.min.css" rel="stylesheet" />
    <link href="stylesheets/lib/owl.theme.default.min.css" rel="stylesheet" />
    <link href="stylesheets/helper.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">
    <!-- Documentation extras -->
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <!-- <link href="stylesheets/demo.css" rel="stylesheet" /> -->
    <!-- iframe removal -->
</head>

<body class="fix-header fix-sidebar">
        <div class="preloader">
                <svg class="circular" viewBox="25 25 50 50">
                    <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
            </div>
            <div id="main-wrapper">
                <%- include('../partials/header') %>

                <%- include('../partials/sidebar') %>
                    <div class="page-wrapper">
                        <!-- Bread crumb -->
                        <div class="row page-titles">
                                <div class="col-md-5 align-self-center">
                                    <h3 class="text-primary"><%= title %></h3> </div>
                                <div class="col-md-7 align-self-center">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                                        <li class="breadcrumb-item active"><%= title %></li>
                                    </ol>
                                </div>
                        </div>
                <!-- End Bread crumb -->
                    <div class="container-fluid">
                        <!-- Start Page Content -->
                        <div class="row">
                            <div class="col-12">
                                <div class="card" style="width: 70%; margin: auto;">
                                    <div class="card-body">
                                        <div class="basic-form">
                                                <% if(error){ %>
                                                    <div id="error" class="alert alert-danger">
                                                        <%= error %>
                                                    </div>
                                                <% } %>
                                            <form action="/pay_tuition" method="POST">
                                                <div class="form-group">
                                                    <label>Student</label>
                                                    <select name="student" class="form-control" id="student" required>
                                                        <% students.forEach(function(student){ %>
                                                            <option value="<%= student._id %>"><%= student.name %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label>Email address</label>
                                                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                                                </div>

                                                <div class="form-group">
                                                        <label>Session</label>
                                                        <select name="session" class="form-control" id="session">
                                                            <% sessions.forEach(function(session){ %>
                                                                <option value="<%= session._id %>"><%= session.name %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Amount Paid</label>
                                                        <input type="number" class="form-control" name="amount" placeholder="Amount" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="">Status</label>
                                                        <select name="status" class="form-control" id="status" required>
                                                            <option value="0">Full Payment</option>
                                                            <option value="1">Part Payment</option>
                                                            <option value="2">Balance</option>
                                                        </select>
                                                    </div>
                                                    <input type="hidden" name="school" value="<%= school._id %>">
                                                    
                                                <button type="submit" class="btn btn-primary">Add Payment</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End PAge Content -->
                    </div>
                </div>
            </div>
</body>
<script src="javascripts/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="javascripts/lib/bootstrap/js/popper.min.js"></script>
    <script src="javascripts/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="javascripts/jquery.slimscroll.js"></script>
    <!--Menu sidebar -->
    <script src="javascripts/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="javascripts/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->


    <!-- Amchart -->
     <script src="javascripts/lib/morris-chart/raphael-min.js"></script>
    <script src="javascripts/lib/morris-chart/morris.js"></script>
    <script src="javascripts/lib/morris-chart/dashboard1-init.js"></script>


	<script src="javascripts/lib/calendar-2/moment.latest.min.js"></script>
    <!-- scripit init-->
    <script src="javascripts/lib/calendar-2/semantic.ui.min.js"></script>
    <!-- scripit init-->
    <script src="javascripts/lib/calendar-2/prism.min.js"></script>
    <!-- scripit init-->
